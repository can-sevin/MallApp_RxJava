<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/back"
        android:layout_height="match_parent"
        tools:context=".view.MallAct">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="64dp"
            android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#20000000"
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/re_mall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#33000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:padding="8dp"
                    android:src="@mipmap/logo"
                    android:layout_width="72dp"
                    android:layout_height="72dp">
            </ImageView>
            <TextView
                    android:textSize="32sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:text="AVMMapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
        </androidx.cardview.widget.CardView>
        <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:text="En İyi Mağazalar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />
            <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#20000000"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="24sp"
                        android:id="@+id/re_shop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <TextView
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:text="Kampanyalar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            <androidx.cardview.widget.CardView
                    app:cardCornerRadius="6dp"
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/imageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:sliderAnimationDuration="1300"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderCircularHandlerEnabled="true"
                        app:sliderIndicatorAnimationDuration="1300"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="2dp"
                        app:sliderIndicatorSelectedColor="#000"
                        app:sliderIndicatorUnselectedColor="#FFF"
                        app:sliderScrollTimeInSec="1"
                        app:sliderStartAutoCycle="true" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
